{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es2020",
		"rootDir": "./src/",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types", "./src/types"],
		"alwaysStrict": true,
		"esModuleInterop": true
	},
	"include": ["./src/**/*"]
}
